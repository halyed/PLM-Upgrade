# Copy this file to .env and fill in your values.
# .env is gitignored — never commit real secrets.

# ── PostgreSQL ───────────────────────────────────────────────────────────────
POSTGRES_DB=plm
POSTGRES_USER=plm_user
POSTGRES_PASSWORD=change_me_postgres

# ── MinIO ────────────────────────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_minio
MINIO_PUBLIC_ENDPOINT=http://localhost:9000

# ── RabbitMQ ─────────────────────────────────────────────────────────────────
RABBITMQ_USER=plm_rabbit
RABBITMQ_PASS=change_me_rabbit

# ── JWT ──────────────────────────────────────────────────────────────────────
# Must be at least 32 characters
JWT_SECRET=change_me_to_a_long_random_secret_string_here

# ── Internal service URLs (no need to change for local Docker Compose) ───────
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/plm
MINIO_ENDPOINT=http://minio:9000
CONVERSION_SERVICE_URL=http://conversion-service:5000
